@import "actix"

.carbon-ads, .bsa-cpc-wrapper, .bsa-cpc {
    display: none;
}

ul, ol, li {
    list-style: none;
}

.navbar, .links, .nav-links, button, .front, #join, #lanmu  {
    background: linear-gradient(315deg,  #8FCDFF 0%,  #8FCDFF 100%);
    border: none;
}

.site-name, .navbar a {
    color: #7B463D;
    font-weight: bold;
}

.content div[class*="language-"] {
    background-color: #1D0D00;
}
.content code {
    color: #7B463D;
}

//------------------------home------------------------
.front {
    max-height: 665px;
}

.home .hero {
    color: #7B463D !important;
}
.home .description {
    color: #7B463D !important;
}
.new {
    padding: 0.5rem 2.2rem;
    border-radius: 5%; 
    height 3.3rem;
}

.new a {
    font-size: 1.3rem;
    font-weight: bold;
    color: #7B463D;
}

#join {
    width: 100%;
    text-align: center;
    font-size: 2rem;
}
#join a {
    font-weight: bold;
    color: #7B463D;
}
//---------------------docs----------------------------------

::-webkit-scrollbar {
    width: 4px;
    height: 1px;
    background-color: #F5F5F5;
}
 
/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 16px rgba(0,0,0,.3);
    background-color: #8AC3421;
}

//---------------------blog----------------------------

#lanmu {
    width: 100%;
    height: 11rem;
    text-align: center;
}
#lanmu #word {
    font-size: 3rem;
    font-weight: bold;
    color: #7B463D;
    padding: 4rem 0;
    line-height: 3.3rem; 
}

h4 img {
    width: 1.1rem;
    height: 1.1rem; 
}

@media (max-width: 420px) {
    .front {
        max-height: 533px;
    }
    .content div[class*="language-"] {
        margin: 0.2rem;
    }
}
@media (min-width: 420px) and (max-width: 607px) {
    .front {
        max-height: 700px;
    }
}  
@media (min-width: 608px) and (max-width: 768px) {
    .front {
        max-height: 666px;
    }
}

@media (max-width: 460px) {
    #lanmu #word {
        padding: 3rem 0;
        line-height: 3.3rem; 
    }
}